<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="100025" id="com.reeltrail.rtappmobile" version="1.0.25" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ReelTrail</name>
    <description>
    Access ReelTrail from your mobile device.
  </description>
    <author email="info@reeltrail.com" href="https://dev.reeltrail.com">
    Reeltrail Development Pod
  </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="*.pushwoosh.com" />
    <platform name="browser">
        <preference name="SplashScreen" value="/img/Default~universal~anyany.png" />
    </platform>
    <platform name="android">
        <preference name="Orientation" value="portrait" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <allow-intent href="market:*" />
        <splash src="res/screen/android/Default~universal~anyany.png" />
        <icon density="ldpi" src="res/android/Android36.png" />
        <icon density="mdpi" src="res/android/Android48.png" />
        <icon density="hdpi" src="res/android/Android72.png" />
        <icon density="xhdpi" src="res/android/Android96.png" />
        <icon density="xxhdpi" src="res/android/Android144.png" />
        <icon density="xxxhdpi" src="res/android/Android192.png" />
    </platform>
    <platform name="ios">
        <preference name="Orientation" value="portrait" />
        <preference name="target-device" value="handset" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <icon height="120" src="res/ios/iOS120.png" width="120" />
        <icon height="152" src="res/ios/iOS152.png" width="152" />
        <icon height="167" src="res/ios/iOS167.png" width="167" />
        <icon height="180" src="res/ios/iOS180.png" width="180" />
    </platform>
    <engine name="android" spec="~6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="&quot;Photos for profile and listings&quot;" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="&quot;Photos for profile and listings&quot;" />
    </plugin>
    <plugin name="cordova-plugin-console" spec="^1.0.7" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
    <plugin name="pushwoosh-cordova-plugin" spec="^7.0.4">
        <variable name="LOG_LEVEL" value="DEBUG" />
        <variable name="IOS_FOREGROUND_ALERT_TYPE" value="NONE" />
        <variable name="ANDROID_FOREGROUND_PUSH" value="false" />
    </plugin>
</widget>
